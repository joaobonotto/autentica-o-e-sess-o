doctype html
html
  head
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width, initial-scale=1')
    title Sistema de Autenticação
    style.
      body { font-family: 'Segoe UI', Tahoma, sans-serif; background: #f7f7f7; padding: 20px; margin: 0; }
      header { background: #4CAF50; color: white; padding: 10px; }
      header a, header button { color: white; margin-right: 10px; text-decoration: none; font-weight: bold; }
      main { background: white; padding: 20px; margin-top: 10px; border-radius: 8px; box-shadow: 0 2px 5px rgba(0,0,0,0.1); }
      form { display: flex; flex-direction: column; gap: 10px; max-width: 300px; }
      input { padding: 8px; border: 1px solid #ccc; border-radius: 4px; }
      button { padding: 10px; border: none; border-radius: 4px; cursor: pointer; background: #4CAF50; color: white; }
      .error { color: red; margin-bottom: 10px; }
      .success { color: green; margin-bottom: 10px; }
  body
    header
      if typeof userId !== 'undefined' && userId
        a(href='/app/dashboard') Dashboard
        form(action='/logout' method='post' style='display:inline;')
          button(type='submit') Sair
      else
        a(href='/register') Registrar
        a(href='/login') Entrar
    main
      if message
        if message.type === 'error'
          p.error= message.text
        else if message.type === 'success'
          p.success= message.text
      block content
